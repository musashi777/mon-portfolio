{{ define "main" }}
<!-- Hero Section -->
<section class="gradient-bg text-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center stagger-animation">
            <!-- Text Content -->
            <div class="fade-in-up">
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-4">
                    {{ .Params.headline | default .Title }}
                </h1>
                <p class="text-xl md:text-2xl text-blue-100 mb-6">
                    {{ .Params.subheadline }}
                </p>
                <p class="text-lg text-blue-50 mb-8 leading-relaxed">
                    {{ .Params.intro | markdownify }}
                </p>

                <!-- Buttons -->
                <div class="flex flex-wrap gap-4">
                    {{ range .Params.buttons }}
                    <a href="{{ .url }}"
                       class="{{ .class }} btn-primary px-6 py-3 rounded-lg text-white font-semibold shadow-lg"
                       {{ if .external }}target="_blank" rel="noopener noreferrer"{{ end }}>
                        {{ .text }}
                    </a>
                    {{ end }}
                </div>
            </div>

            <!-- Avatar -->
            {{ if .Params.avatar }}
            <div class="flex justify-center lg:justify-end">
                <div class="relative">
                    <img src="{{ .Params.avatar }}"
                         alt="Photo de StÃ©phan Uniatowitz"
                         class="w-64 h-64 rounded-full border-4 border-white shadow-2xl">
                    <div class="absolute -bottom-2 -right-2 bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">
                        Disponible
                    </div>
                </div>
            </div>
            {{ end }}
        </div>
    </div>
</section>

<!-- Main Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    {{ .Content }}
</div>
{{ end }}
